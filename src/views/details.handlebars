<main class="d-flex flex-column align-items-center w-100 flex-grow-1">
  {{#if products.id}}
  <div class="card mb-3 w-50">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="{{products.photo}}" class="img-fluid rounded-start w-100" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{products.title}}</h5>
          <p class="card-text">Price: ${{products.price}}</p>
          <p class="card-text">Stock: {{products.stock}}</p>
        </div>
      </div>
    </div>
  </div>
  {{else}}
  <h1 class="bg-success-subtle p-2 text-center text-success w-100">PRODUCT NOT FOUND</h1>
  {{/if}}
</main>